{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:eslint-plugin-jest/recommended",
        "eslint-config-prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "eslint-plugin-node",
        "eslint-plugin-jest"
    ],
    "rules": {
        "no-console": "error",
        "yoda": "error",
        "prefer-const": [
            "error",
            {
                "destructuring": "all"
            }
        ],
        "no-control-regex": "off",
        "no-constant-condition": [
            "error",
            {
                "checkLoops": false
            }
        ],
        "node/no-extraneous-import": "error"
    }
}